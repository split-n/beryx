<h1>Login</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(:user, url: login_path) do |f| %>
      <%= f.label :id %>
      <%= f.text_field :login_id, class: "form-control" %>
      <%= f.label :password %>
      <%= f.password_field :password , class: "form-control" %>
      <%= f.submit "Login", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
