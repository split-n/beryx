<%= form_for(@crawl_directory, html: {class: "form-inline"}) do |f| %>
  <% if @crawl_directory.errors.any? %>
    <div class="bg-danger">
      <h2><%= pluralize(@crawl_directory.errors.count, "error") %></h2>
      <ul>
      <% @crawl_directory.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="crawl_directory[path]">Path</label>
    <%= f.text_field :path, class: "form-control", id: "cd-form-path-input" %>
  </div>
  <div class="form-group">
  <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
